<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cover</th>
      <th>Rule text</th>
      <th>Pieces</th>
      <th>Rules Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <%= game.name %>
        </td>
        <td>
          <%= link_to (image_tag (game.cover.variant(monochrome: true, resize: "100x100").processed)), rails_blob_url(game.cover), disposition: "attachment"  %>
        </td>
      
        <td>
          <%#= image_tag game.rule.variant(resize:'100x100') %>
          <%= link_to game.rule.filename, rails_blob_path(game.rule, disposition: 'attachment') %>
        </td>
        <td>
          <% game.pieces.each do |piece| %>
            <%= link_to (image_tag piece.variant(monochrome: true, resize: "100x100")), rails_blob_url(piece), disposition: "attachment" %>
          <% end %>
        </td>
        <td><%= game.rule_text %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

<br>

